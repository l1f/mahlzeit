<!--
    This manifest is overwritten at build time using the go:generate command.
    At development time, it loads the files using Vite.

    Vite itself can be run using "npm start".
-->

{{ define "manifest" }}
{{ $host := "localhost:5173" }}
{{ with (env "CODESPACES") }}
  {{ $host = printf "%s-%d.%s" (env "CODESPACE_NAME") 5173 (env "GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN") }}
{{ end }}
  <script
    type="module"
    src="http://{{ $host }}/assets/entrypoint.ts"
  ></script>
{{ end }}
